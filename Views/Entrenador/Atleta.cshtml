@{
    ViewData["Title"] = "Mis Atletas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .trainer-title {
        font-weight: 700;
        color: #264653;
        margin-bottom: 2rem;
    }
</style>

<div class="container mt-4 px-3 px-md-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="trainer-title">Mis Atletas</h2>
    </div>

    <!-- Filtros -->
    <div class="card shadow-sm rounded-3 mb-4 p-3">
        <div class="row g-3">
            <div class="col-md-6">
                <input type="text" id="busqueda" class="form-control" placeholder="Buscar por nombre...">
            </div>
            <div class="col-md-4">
                <select class="form-select" id="filtroEstado">
                    <option value="">Todos</option>
                    <option value="Activo">Activos</option>
                    <option value="Inactivo">Inactivos</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Tabla de atletas -->
    <div class="card shadow-sm rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Objetivo</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="tablaAtletas">
                        <tr>
                            <td>Andrea Vargas</td>
                            <td>Maratón 42K</td>
                            <td><span class="badge bg-success">Activo</span></td>
                            <td>
                                <a href="@Url.Action("Detalle", "Entrenador", new { id = 1 })" class="btn btn-outline-primary btn-sm">
                                    Ver detalles
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>Marco Jiménez</td>
                            <td>Recuperación post-lesión</td>
                            <td><span class="badge bg-secondary">Inactivo</span></td>
                            <td>
                                <a href="@Url.Action("Detalle", "Entrenador", new { id = 2 })" class="btn btn-outline-primary btn-sm">
                                    Ver detalles
                                </a>
                            </td>
                        </tr>
                        <!-- Más atletas aquí -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Scripts de búsqueda y filtro -->
<script>
    document.getElementById("busqueda").addEventListener("keyup", function () {
        let filtro = this.value.toLowerCase();
        document.querySelectorAll("#tablaAtletas tr").forEach(row => {
            row.style.display = row.textContent.toLowerCase().includes(filtro) ? "" : "none";
        });
    });

    document.getElementById("filtroEstado").addEventListener("change", function () {
        let estado = this.value.toLowerCase();
        document.querySelectorAll("#tablaAtletas tr").forEach(row => {
            let texto = row.textContent.toLowerCase();
            row.style.display = estado === "" || texto.includes(estado) ? "" : "none";
        });
    });
</script>
