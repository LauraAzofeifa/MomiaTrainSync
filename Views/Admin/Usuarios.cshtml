@{
    ViewData["Title"] = "Gestión de Usuarios";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .admin-title {
        font-weight: 700;
        color: #264653;
        margin-bottom: 1.5rem;
    }

    .btn-agregar {
        background-color: #2a9d8f;
        color: white;
        border: none;
        border-radius: 0.5rem;
    }

        .btn-agregar:hover {
            background-color: #21867a;
        }

    .table thead {
        background-color: #e0f0f0;
        color: #264653;
        font-weight: 600;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    .filter-row input {
        width: 100%;
        padding: 3px;
        border-radius: 0.3rem;
        border: 1px solid #ccc;
        font-size: 0.9rem;
    }

    .btn-action {
        margin-right: 0.4rem;
    }

    .badge {
        font-size: 0.85rem;
    }

    .dataTables_filter {
        display: none !important;
    }

    .switch {
        position: relative;
        display: inline-block;
        width: 42px;
        height: 22px;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        border-radius: 34px;
        transition: .4s;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 16px;
            width: 16px;
            left: 4px;
            bottom: 3px;
            background-color: white;
            border-radius: 50%;
            transition: .4s;
        }

    input:checked + .slider {
        background-color: #2a9d8f;
    }

        input:checked + .slider:before {
            transform: translateX(18px);
        }
</style>

<div class="container-fluid px-3 px-md-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="admin-title">Gestión de Usuarios</h2>
        <a href="@Url.Action("CrearUsuario", "Admin")" class="btn btn-agregar">
            <i class="fas fa-user-plus me-2"></i>Agregar Usuario
        </a>
    </div>

    <div class="table-responsive">
        <table id="tablaUsuarios" class="table table-bordered table-hover align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Rol</th>
                    <th>Estado</th>
                    <th>Fecha Ingreso</th>
                    <th class="text-center">Acciones</th>
                </tr>
                <tr class="filter-row">
                    <th></th>
                    <th><input type="text" placeholder="Filtrar por nombre" /></th>
                    <th><input type="text" placeholder="Filtrar por correo" /></th>
                    <th><input type="text" placeholder="Filtrar por rol" /></th>
                    <th></th>
                    <th><input type="text" placeholder="Filtrar por fecha" /></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 1; i <= 10; i++)
                {
                    string nombre = $"Usuario {i}";
                    string correo = $"usuario{i}@example.com";
                    string rol = i % 3 == 0 ? "Atleta" : i % 2 == 0 ? "Entrenador" : "Administrador";
                    string estado = i % 4 == 0 ? "" : "checked";
                    string fecha = DateTime.Now.AddDays(-i * 2).ToString("yyyy-MM-dd");
                    <tr>
                        <td>@i</td>
                        <td>@nombre</td>
                        <td>@correo</td>
                        <td>@rol</td>
                        <td class="text-center">
                            <label class="switch">
                                <input type="checkbox" @estado />
                                <span class="slider"></span>
                            </label>
                        </td>
                        <td>@fecha</td>
                        <td class="text-center">
                            <a href="/Admin/EditarUsuario/@i" class="btn btn-sm btn-primary btn-action" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modalEliminar" data-id="@i" data-nombre="@nombre">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal de eliminación -->
<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="modalEliminarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEliminarLabel">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro que deseas eliminar al usuario <strong id="usuarioAEliminar">este usuario</strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger">Eliminar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#tablaUsuarios').DataTable({
                orderCellsTop: true,
                fixedHeader: true,
                order: [[5, 'desc']],
                language: {
                    search: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros por página",
                    info: "Mostrando _START_ a _END_ de _TOTAL_ usuarios",
                    paginate: {
                        first: "Primero",
                        last: "Último",
                        next: "Siguiente",
                        previous: "Anterior"
                    },
                    zeroRecords: "No se encontraron resultados",
                    infoEmpty: "Mostrando 0 a 0 de 0 usuarios",
                    infoFiltered: "(filtrado de _MAX_ usuarios totales)"
                }
            });

            $('#tablaUsuarios thead tr.filter-row input').on('keyup change', function () {
                var colIndex = $(this).parent().index();
                table.column(colIndex).search(this.value).draw();
            });

            $('#modalEliminar').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget);
                const userName = button.data('nombre');
                $(this).find('#usuarioAEliminar').text(userName);
            });
        });
    </script>
}
